<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="140dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Give your event a name.(Dinner, Lunch, Happy Hour, Brunch...ect.)"
                    android:textColor="#3C3111"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/nameOfEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Where is your event happening? Start typing address below..."
                    android:textColor="#3C3111"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="textMultiLine"/>

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Date of your event?"
                    android:textColor="#0E0D0D"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="date"/>

                <DatePicker
                    android:theme="@style/DatePicker"
                    android:id="@+id/datePicker"
                    android:datePickerMode="spinner"
                    android:spinnersShown="true"
                    android:calendarViewShown="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Time of your event?"
                    android:textColor="#3C3111"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="time"/>
                <TimePicker
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:id="@+id/timeOfEvent"
                    android:timePickerMode="spinner"
                    android:layout_centerHorizontal="true"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_alignLeft="@+id/card"
            android:layout_alignRight="@+id/card"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:elevation="1dp">

            <Button
                android:id="@+id/createEventSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/side_nav_bar"
                android:text="Create"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#0E0D0D"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_alignLeft="@+id/card"
            android:layout_alignRight="@+id/card"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"/>

        </RelativeLayout>

    </ScrollView>

        </RelativeLayout>


